<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage2_2"
    android:orientation="vertical"
    android:background="@drawable/bgm_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

    </LinearLayout>

    <TextView
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:fontFamily="@font/rammetto_one"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="20"
            android:text="Level Select"
            android:textColor="#FFFFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />


    <Button
        android:id="@+id/level_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/card_button"
        android:fontFamily="@font/baloo_bhai"
        android:padding="10dp"
        android:text="Level-1"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/level_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/card_button"
        android:fontFamily="@font/baloo_bhai"
        android:padding="10dp"
        android:text="Level-2"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/level_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/card_button"
        android:fontFamily="@font/baloo_bhai"
        android:padding="10dp"
        android:text="Level-3"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/exit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0.9"
        android:background="@drawable/custom_guide_dialog"
        android:fontFamily="@font/baloo_bhai"
        android:padding="10dp"
        android:text="Quit Game"
        android:textColor="#E6E6E6"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

    </LinearLayout>



</LinearLayout>